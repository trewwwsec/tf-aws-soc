<!-- Database dump commands -->
<rule id="200112" level="12">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)mysqldump|pg_dump|mongodump|sqlite3</field>
  <description>Database dump command executed</description>
  <mitre>
    <id>T1005</id>
  </mitre>
  <group>collection,</group>
</rule>

<!-- ========================================
     DISCOVERY
     MITRE: T1087 - Account Discovery
     ======================================== -->

<!-- Local account enumeration -->
<rule id="200120" level="6">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)cat|less|more</field>
  <field name="auditd.file" type="pcre2">/etc/passwd</field>
  <description>Local user account enumeration detected</description>
  <mitre>
    <id>T1087.001</id>
  </mitre>
  <group>discovery,</group>
</rule>

<!-- Network discovery commands -->
<rule id="200121" level="8">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)nmap|masscan|zmap|arp-scan</field>
  <description>Network scanning tool executed</description>
  <mitre>
    <id>T1046</id>
  </mitre>
  <group>discovery,network_activity,</group>
</rule>

<!-- AD enumeration tools -->
<rule id="200122" level="10">
  <if_sid>60009</if_sid>
  <field name="win.eventdata.scriptBlockText" type="pcre2">(?i)Get-ADUser|Get-ADGroup|Get-ADComputer|net\s+user\s+/domain|net\s+group\s+/domain</field>
  <description>Active Directory enumeration detected</description>
  <mitre>
    <id>T1087.002</id>
  </mitre>
  <group>discovery,powershell,</group>
</rule>

<!-- System information gathering -->
<rule id="200123" level="6">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)uname|hostname|whoami|id|cat.*release</field>
  <description>System information gathering detected</description>
  <mitre>
    <id>T1082</id>
  </mitre>
  <group>discovery,</group>
</rule>

<!-- Cloud metadata service access (SSRF/credential theft) -->
<rule id="200124" level="12">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)curl|wget</field>
  <field name="auditd.a0" type="pcre2">169\.254\.169\.254|metadata\.google|metadata\.azure</field>
  <description>Cloud metadata service access detected (potential credential theft)</description>
  <mitre>
    <id>T1552.005</id>
  </mitre>
  <group>discovery,credential_access,cloud_security,</group>
</rule>

</group>
