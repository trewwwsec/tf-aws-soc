<!-- ========================================
     DATA EXFILTRATION DETECTION
     MITRE: T1041 - Exfiltration Over C2
     ======================================== -->

<!-- Large data transfer via web upload -->
<rule id="200100" level="10">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)curl|wget|python</field>
  <field name="auditd.a0" type="pcre2">(?i)--upload|--data|-d|POST</field>
  <description>Potential data exfiltration via HTTP upload detected</description>
  <mitre>
    <id>T1041</id>
    <id>T1048.002</id>
  </mitre>
  <group>data_exfiltration,network_activity,</group>
</rule>

<!-- Base64 encoded data in commands -->
<rule id="200101" level="10">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.a0" type="pcre2">base64|openssl\s+enc</field>
  <description>Data encoding detected (potential exfiltration preparation)</description>
  <mitre>
    <id>T1132.001</id>
    <id>T1560</id>
  </mitre>
  <group>data_exfiltration,</group>
</rule>

<!-- DNS exfiltration patterns -->
<rule id="200102" level="12">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)nslookup|dig|host</field>
  <field name="auditd.a0" type="pcre2">TXT|CNAME|MX|\.{50,}</field>
  <description>Suspicious DNS query pattern detected (potential DNS exfiltration)</description>
  <mitre>
    <id>T1048.003</id>
  </mitre>
  <group>data_exfiltration,network_activity,</group>
</rule>

<!-- Cloud storage access -->
<rule id="200103" level="8">
  <if_sid>60009</if_sid>
  <field name="win.eventdata.scriptBlockText" type="pcre2">(?i)s3\.|blob\.core|storage\.googleapis|dropbox|onedrive</field>
  <description>Cloud storage service access detected in PowerShell</description>
  <mitre>
    <id>T1567.002</id>
  </mitre>
  <group>data_exfiltration,powershell,</group>
</rule>

<!-- Archive creation (tar/zip) of sensitive directories -->
<rule id="200104" level="10">
  <decoded_as>auditd</decoded_as>
  <field name="auditd.exe" type="pcre2">(?i)tar|zip|7z|gzip</field>
  <field name="auditd.a0" type="pcre2">(?i)/etc|/home|/root|/var/log</field>
  <description>Archive creation of sensitive directories detected (potential data staging)</description>
  <mitre>
    <id>T1560.001</id>
  </mitre>
  <group>data_exfiltration,collection,</group>
</rule>

